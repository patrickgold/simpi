{
    "type": "group",
    "heading": "SimPi Preferences",
    "children": [
        {
            "type": "group",
            "heading": "General",
            "children": [
                {
                    "type": "pref/dropdown",
                    "key": "general__theme",
                    "label": "Theme",
                    "options": ["auto", "light", "dark"],
                    "defaultValue": "auto"
                }
            ]
        },
        {
            "type": "group",
            "heading": "Syncronization",
            "children": [
                {
                    "type": "pref/slider",
                    "key": "sync__update_timeout_ms",
                    "label": "Update timeout",
                    "min": 10,
                    "max": 1000,
                    "step": 10,
                    "defaultValue": 100,
                    "unit": "ms"
                }
            ]
        },
        {
            "type": "group",
            "heading": "Broker Preferences",
            "children": [
                {
                    "type": "pref/text",
                    "key": "broker__hostname",
                    "label": "Hostname",
                    "defaultValue": "simpi"
                }
            ]
        }
    ]
}